html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="format-detection", content="telephone=no")

    title #{title}

    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.20/css/uikit.min.css")

    script(src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.20/js/uikit.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.20/js/uikit-icons.min.js")
  body
    div.uk-section
      div.uk-container.uk-container-expand
        h1
          a(href="/") Sus2Image Î²
        h2= meta.TITLE
        div(style="width: 100%; overflow-x: scroll;")
          div(style=`display: flex; width: ${Math.ceil(images.length/3) * 93}px; align-items: flex-end;`)
            - images = images.reverse()
            - for (let i = 0; i < Math.ceil(images.length/3); i++)
              div(style="margin-right: 4px; width: 93px; height: fit-content;")
                - if(i*3+2 < images.length)
                  div(style="width: 93px; margin-left: auto;")
                    span(style="font-size: 12px; color: #000; text-decoration: underline; padding-right: 2px;")= i*3+3
                    img(src=images[i*3+2], style="vertical-align: bottom; width: 68px;")
                - if(i*3+1 < images.length)
                  div(style="width: 93px; margin-left: auto;")
                    span(style="font-size: 12px; color: #000; text-decoration: underline; padding-right: 2px;")= i*3+2
                    img(src=images[i*3+1], style="vertical-align: bottom; width: 68px;")
                - if(i*3 < images.length)
                  div(style="width: 93px; margin-left: auto;")
                    span(style="font-size: 12px; color: #000; text-decoration: underline; padding-right: 2px;")= i*3+1
                    img(src=images[i*3], style="vertical-align: bottom; width: 68px;")
        div#bottom
